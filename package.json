{
  "name": "cmis",
  "version": "1.0.0",
  "main": "electron/main.js",
  "scripts": {
    "dev:frontend": "cd frontend && npm run dev",
    "dev:electron": "wait-on http://localhost:5174 && cross-env NODE_ENV=development electron .",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:electron\"",
    "build:frontend": "cd frontend && npm run build",
    "build:electron": "electron-builder",
    "dist": "npm run build:frontend && npm run build:electron"
  },
  "build": {
    "appId": "com.csu.mims",
    "productName": "CSU-MIMS",
    "directories": {
      "output": "release"
    },
    "files": [
      "electron/**/*",
      "frontend/dist/**/*"
    ],
    "extraResources": [
      {
        "from": "backend/dist/backend",
        "to": "backend",
        "filter": ["**/*"]
      },
      {
        "from": "backend/db.sqlite3",
        "to": "backend/db.sqlite3"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "frontend/public/csulogo.png"
    }
  }
}